<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".RegisterActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bus"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add or edit your bus"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/bus_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bus Name">
        </EditText>
        <EditText
            android:id="@+id/capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Capacity"
            android:inputType="number">
        </EditText>
        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Price"
            android:inputType="number">
        </EditText>
        <LinearLayout
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Bus Type"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_directions_bus_24"
                app:tint="@color/black">
            </ImageView>
            <Spinner
                android:id="@+id/type_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/departure"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Departure"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_house_24"
                app:tint="@color/black">
            </ImageView>
            <Spinner
                android:id="@+id/departure_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arrival"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Arrival"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_arrow_forward_24"
                app:tint="@color/black">
            </ImageView>
            <Spinner
                android:id="@+id/arrival_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center">
            </Spinner>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facilities"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/AC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AC"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/WiFi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wifi"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/Toilet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Toilet"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/LCDTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LCD TV"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/Coolbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coolbox"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/Lunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lunch"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/LargeBaggage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Large Baggage"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/ElectricSocket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Electric Socket"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/add_btn"
            android:layout_marginTop="10dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ADD"
            app:cornerRadius="20dp">
        </Button>
    </LinearLayout>
</LinearLayout>
